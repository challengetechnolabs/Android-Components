<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
<!--    <style name="Theme.NavigationDrawer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
    <style name="Theme.NavigationDrawer" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#000000</item>

        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state_dark</item>

    </style>

    <style name="Theme.NavigationDrawer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- for navigation drawer view selected item -->
    <style name="Widget.Custom.NavigationView" parent="Widget.Material3.NavigationView">
        <!--        <item name="itemIconTint">?attr/colorNavigationItem</item>-->
        <!--        <item name="itemTextColor">?attr/colorNavigationItem</item>-->
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

<!--    <style name="Theme.NavigationDrawer.AppBarOverlay" parent="ThemeOverlay.Material3.Light">-->
<!--        <item name="android:colorBackground">@color/purple_200</item>-->
<!--    </style>-->

    <style name="Theme.NavigationDrawer.PopupOverlay" parent="Widget.Material3.PopupMenu">
        <item name="popupMenuBackground">@drawable/pop_up_round_dark</item>
    </style>

    <!--    bottom view Theme-->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="android:background">@color/grayLight</item>
        <item name="itemRippleColor">@color/blueLight</item>
        <item name="itemIconTint">@color/white</item>

    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorOnSurfaceVariant">@color/white</item>

    </style>
    <style name="Theme.Bottom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/blue</item>
    </style>

</resources>